{
    "version": "2.0.0",
    "command": "bash",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
    },
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "args": [
        "-c"
    ],
    "tasks": [
        {
            "label": "make project",
            "type": "shell",
            "group": "build",
            "args": [
                "make clean && make -j"
            ]
        },
        {
            "label": "make project opt",
            "type": "shell",
            "group": "build",
            "args": [
                "make clean && make -j deploy"
            ]
        },
        {
            "label": "profile build project",
            "type": "shell",
            "group": "build",
            "args": [
                "make clean && make -j profile"
            ]
        },
        {
            "label": "analyze project",
            "type": "shell",
            "args": [
                "gprof ./42 gmon.out > analysis.txt"
            ]
        },
        // {
